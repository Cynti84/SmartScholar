{
  "name": "backend",
  "version": "1.0.0",
  "description": "SmartScholar Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "migration:generate": "npm run typeorm -- migration:generate -d src/utils/db.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/utils/db.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/utils/db.ts"
  },
  "engines": {
    "node": "20.x",
    "npm": "9.x"
  },
  "keywords": [
    "scholarship",
    "education",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcrypt": "^6.0.0",
    "bluebird": "^3.7.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.9",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "speakeasy": "^2.0.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bluebird": "^3.5.42",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.6",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.13",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.6",
    "@types/sequelize": "^4.28.20",
    "@types/speakeasy": "^2.0.10",
    "@types/validator": "^13.15.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
